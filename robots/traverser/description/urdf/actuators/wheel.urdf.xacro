<?xml version="1.0"?>
<!-- XML namespaces -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="wheel" params="name parent *origin 
                                      length:=0.05 
                                      radius:=0.05
                                      material_name:=black
                                      gazebo_material_name:=Gazebo/Black">

        <xacro:property name="wheel_density" value="1522.0"/> <!-- rubber -->
        <xacro:property name="wheel_mass"
                        value="${wheel_density * pi * radius * radius * length}"/>

        <joint name="${parent}_to_${name}_wheel_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="${parent}"/>
            <child link="${name}_wheel_link"/>
            <xacro:insert_block name="origin" />
        </joint>

        <link name="${name}_wheel_link">
            <visual>
                <geometry>
                    <cylinder length="${length}" radius="${radius}"/>
                </geometry>
                <material name="${material_name}"/>
            </visual>

            <collision>
                <geometry>
                    <cylinder length="${length}" radius="${radius}"/>
                </geometry>
            </collision>

            <xacro:cylinder_inertia mass="${wheel_mass}" radius="${radius}"
                                    length="${length}" />
        </link>

        <gazebo reference="${name}_wheel_link">
            <material>${gazebo_material_name}</material>
            <mu1>0.0</mu1>
            <mu2>0.0</mu2>
        </gazebo>

    </xacro:macro>
</robot>

