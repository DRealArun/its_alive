<?xml version="1.0"?>
<!-- XML namespaces -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="wheel" params="name parent *origin 
                                      length:=0.05 
                                      radius:=0.05
                                      material_name:=black
                                      gazebo_material_name:=Gazebo/Black">

        <joint name="${parent}_to_${name}_wheel_joint" type="continuous">
            <axis xyz="0 0 1"/>
            <parent link="${parent}"/>
            <child link="${name}_wheel_link"/>
            <xacro:insert_block name="origin" />
        </joint>

        <link name="${name}_wheel_link">
            <visual>
                <geometry>
                    <cylinder length="${length}" radius="${radius}"/>
                </geometry>
                <material name="${material_name}"/>
            </visual>

            <collision>
                <geometry>
                    <cylinder length="${length}" radius="${radius}"/>
                </geometry>
            </collision>

            <xacro:cylinder_inertia mass="12" radius="${radius}"
                                    length="${length}" />
        </link>

        <gazebo reference="${name}_wheel_link">
            <material>${gazebo_material_name}</material>
        </gazebo>

        <!-- <transmission name="${name}_wheel_link">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${parent}_to_${name}_wheel_joint">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
            <actuator name="${name}_wheel_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission> -->

    </xacro:macro>
</robot>

